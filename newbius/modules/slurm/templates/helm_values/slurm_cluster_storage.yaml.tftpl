volume:
  jail:
    size: ${volume.jail.size}
    filestoreDeviceName: ${volume.jail.device}
  controllerSpool:
    size: ${volume.controller_spool.size}
    filestoreDeviceName: ${volume.controller_spool.device}
  accounting:
    enabled: ${volume.accounting_storage.enabled}
    %{~ if volume.accounting_storage.enabled ~}
    size: ${volume.accounting_storage.size}
    filestoreDeviceName: ${volume.accounting_storage.device}
    %{~ endif ~}
  %{~ if length(volume.jail_submounts) > 0 ~}
  jailSubMounts:
    %{~ for sub_mount in volume.jail_submounts ~}
    - name: ${sub_mount.name}
      size: ${sub_mount.size}
      filestoreDeviceName: ${sub_mount.device}
    %{~ endfor ~}
  %{~ endif ~}

scheduling:
  cpuOnly:
    matchExpressions:
      - key: ${scheduling.key}
        operator: In
        values:
          - ${scheduling.cpu}

  cpuAndGpu:
    matchExpressions:
      - key: ${scheduling.key}
        operator: In
        values:
          - ${scheduling.cpu}
          - ${scheduling.gpu}
    tolerations:
      - key: nvidia.com/gpu
        operator: Exists
        effect: NoSchedule
